<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_cardview"
    android:layout_marginLeft="@dimen/half_activity_default_margin"
    android:layout_marginRight="@dimen/half_activity_default_margin"
    android:layout_marginTop="@dimen/quarter_activity_default_margin"
    android:layout_marginBottom="@dimen/quarter_activity_default_margin"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="128dp" />

        <TextView
            android:id="@+id/event_title"
            android:layout_marginTop="@dimen/activity_default_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_default_margin"
            android:orientation="horizontal">

            <ImageView
                android:src="@drawable/ic_event_black_48dp"
                android:alpha="0.6"
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <TextView
                android:id="@+id/event_from"
                android:layout_marginLeft="@dimen/half_activity_default_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@drawable/ic_thumbs_up_down_black_48dp"
                android:alpha="0.6"
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <TextView
                android:id="@+id/event_rating"
                android:layout_marginLeft="@dimen/half_activity_default_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@drawable/ic_location_on_black_48dp"
                android:alpha="0.6"
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <TextView
                android:id="@+id/event_location"
                android:layout_marginLeft="@dimen/half_activity_default_margin"
                android:textStyle="italic"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>