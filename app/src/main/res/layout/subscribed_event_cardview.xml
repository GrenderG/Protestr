<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/subscribed_event_cardview"
    android:layout_marginLeft="@dimen/half_activity_default_margin"
    android:layout_marginRight="@dimen/half_activity_default_margin"
    android:layout_marginTop="@dimen/quarter_activity_default_margin"
    android:layout_marginBottom="@dimen/quarter_activity_default_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/subscribed_event_image"
                android:layout_width="128dp"
                android:layout_height="92dp"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription"/>

            <View
                android:layout_width="128dp"
                android:layout_height="92dp"
                android:background="@drawable/side_white_gradient" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subscribed_event_title"
                android:layout_marginTop="@dimen/half_activity_default_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/half_activity_default_margin"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/subscribed_event_date"
                android:layout_marginTop="@dimen/half_activity_default_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/half_activity_default_margin"
                android:textStyle="italic"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    
</android.support.v7.widget.CardView>